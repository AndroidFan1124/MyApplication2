<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/seleted_layout"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:background="@color/blue"
        android:visibility="gone">

        <Button
            android:id="@+id/exit_seleted_loc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|left"
            android:layout_marginLeft="10px"
            android:background="@color/translate"
            android:visibility="visible"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:text="退出全选"
             />

        <TextView
            android:id="@+id/show_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="已选0个"
            android:textColor="@color/white"
            android:textSize="17sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center"
            android:layout_marginRight="10px"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/seleted_all_loc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="5px"
                android:text="全选"
                android:textColor="@color/white"
                android:textSize="17sp" />

            <ImageButton
                android:id="@+id/delete_loc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5px"
                android:background="@mipmap/map_delete" />
        </LinearLayout>
    </FrameLayout>

    <FrameLayout
        style="@style/match"
        android:background="@color/white"
        android:orientation="vertical">

        <com.example.myapplication.stickygridheaders.StickyGridHeadersGridView
            android:id="@+id/asset_grid"
            style="@style/grid"></com.example.myapplication.stickygridheaders.StickyGridHeadersGridView>
    </FrameLayout>

</LinearLayout>
