<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/common_title">
    <RelativeLayout
            android:id="@+id/title_bar"
            android:layout_height="50dp"
            android:layout_width="match_parent"
            android:background="@color/blue"
            >

        <Button
                android:id="@+id/title_btn_left"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:background="@color/blue"
                android:text="退出"

                android:textColor="@color/whites"
                android:textSize="12sp"/>

        <TextView
                android:id="@+id/title_txt"
                android:layout_height="40dp"
                android:layout_width="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:textSize="12sp"
                android:textStyle="bold"/>
      <!-- 
        <Button
                android:id="@+id/title_btn_right"
                android:layout_height="30dp"
                android:layout_width="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:background="@color/blue"

                />
 -->
        <LinearLayout
                android:id="@+id/common_constact"
                android:layout_height="wrap_content"
                android:layout_width="120dp"
                android:orientation="horizontal"
                android:layout_centerInParent="true"
                android:background="@drawable/bar_menu_incomeandcosume">
            <Button
                    android:id="@+id/btn_time"
                    style="@style/top_group"
                    android:text="@string/ordertime"

                    />
            <Button
                    android:id="@+id/btn_place"
                    style="@style/top_all"
                    android:text="@string/orderplace"

                    />
        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>
